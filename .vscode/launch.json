{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "name": "Generate cmake sources",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/create_cmake_sources.py",
            "args": ["${fileDirname}", "${fileDirnameBasename}"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug (x64)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [{
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "envFile": "${workspaceFolder}/.vscode/.envDebug",
            "preLaunchTask": "Build Debug x64"
        },
        {
            "name": "Debug Current Folder (x64)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug-${fileDirnameBasename}/main.exe",
            // "program": "${workspaceFolder}/build/debug-${fileDirnameBasename}/CircleConverter.exe",
            "args": ["-h"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [{
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "envFile": "${workspaceFolder}/.vscode/.envDebug",
            "preLaunchTask": "Build Current Folder Debug x64"
        },
        {
            "name": "Release (x64)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.vscode/.envRelease",
            "preLaunchTask": "Build Release x64"
        }


    ]
}